<% include ../header %>
<h1>Edit</h1>
<form action="/posts/<%= id %>" method="post" enctype="application/x-www-form-urlencoded">
    <label for="title">タイトル</label><input type="text" name="title" value="<%= post.title %>"/><br/>
    <label for="body">ボディ</label><input type="text" name="body" value="<%= post.body %>" /><br/>
    <input type="hidden" name="_csrf" value="<%= csrftoken %>" />
    <input type="hidden" name="_method" value="put" />
    <input type="hidden" name="id" value="<%= id %>" />
    <input type="submit" value="Update"/>
</form>
<p><a href="/">Go Back</a></p>
<% include ../footer %>
